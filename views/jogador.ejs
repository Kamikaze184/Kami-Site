                    <div class="title">
                        <h1>Fichas</h1>
                    </div>
                    <div class="cardBody" id="cardScroll">
                        <% for (var f of info.fichas){%>
                            <a class="item" href="/user/jogador/ficha/<%= `${f}`%>">
                                <h2>
                                    <%= f %>
                                </h2>
                            </a>
                            <%}%>
                    </div>
                </div>
                <div class="card">
                    <div class="title">
                        <h1>Fichas IRT</h1>
                    </div>
                    <div class="cardBody" id="cardScroll">
                        <h2>Em desenvolvimento</h2>
                        <!-- <%# for (var f of info.irt){%>
                            <div class="item">
                                <h2>
                                    <%# f.nomerpg %>
                                </h2>
                                <h2>
                                    <%# f.chid %>
                                </h2>
                            </div>
                            <%#}%> -->
                    </div>
                </div>
                <div class="card">
                    <div class="title">
                        <h1>Campanhas</h1>
                    </div>
                    <div class="cardBody" id="cardScroll">
                        <h2>Em desenvolvimento</h2>
                    </div>
                </div>
                <div class="card">
                    <div class="title">
                        <h1>Outras funções</h1>
                    </div>
                    <div class="cardBody" id="cardScroll">
                        <h2>Em desenvolvimento</h2>
                    </div>
                </div>
            </div>
        </div>
        <div class="ocean">
            <div class="wave"></div>
            <div class="wave"></div>
        </div>
    </main>
    <footer>
        <%- include('./partials/footer.ejs', {}); %>
    </footer>
</body>

</html>