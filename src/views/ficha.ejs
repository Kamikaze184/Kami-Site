<!DOCTYPE html>
<html lang="pt-br">

<head>
    <%- include('./partials/head.ejs') %>
        <link rel="stylesheet" href="/css/global.css">
        <link rel="stylesheet" href="/css/ficha.css">
        <link rel="stylesheet" href="/css/partials/formFicha.css">
        <script type="text/javascript" src="https://livejs.com/live.js"></script>
</head>

<body>
    <header>
        <%- include('./partials/nav.ejs', {session: session, redirect: `/jogador/ficha/${ficha.nomerpg}`}) %>
    </header>
    <main>
        <div class="bgControls">
            <div class="nomeFicha">
                <h1>Ficha: <%= ficha.nomerpg%></h1>
                <p>Criada por: <%= session.user.username %>#<%=session.user.discriminator%></p>
            </div>
            <div class="divisor"></div>
            <div class="addRmButtons">
                <button>Adicionar Atributo</button>
                <button>Remover Atributo</button>
            </div>
            <div class="divisor"></div>
            <div class="salvarCompButtons">
                <button>Salvar Alterações</button>
            </div>
            <div class="divisor"></div>
            <div class="rnApgButtons">
                <button>Renomear Ficha</button>
                <button>Apagar Ficha</button>
            </div>
            <div class="divisor"></div>
            <div class="notification"></div>
        </div>
    </main>
    <footer>
        <%- include('./partials/betaFooter.ejs', {}); %>
    </footer>
</body>

</html>